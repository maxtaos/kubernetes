production:
  adapter: mysql2
  database: <%= node['gce']['instance']['attributes']['dbname'] %>
  pool: 5
  host: <%= node['gce']['instance']['attributes']['dbhost'] %>
  username: <%= node['gce']['instance']['attributes']['dbuser'] %>
  password: <%= node['gce']['instance']['attributes']['dbpassword'] %>
  sslkey: <%= node['gce']['instance']['attributes']['secret_base'] %>/<%= node['gce']['instance']['attributes']['sslkey'] %>
  sslcert: <%= node['gce']['instance']['attributes']['secret_base'] %>/<%= node['gce']['instance']['attributes']['sslcert'] %>
  sslca: <%= node['gce']['instance']['attributes']['secret_base'] %>/<%= node['gce']['instance']['attributes']['sslca'] %>